      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :start_hour %>
    <%= form.time_select :start_hour %>
  </div>

  <div class="field">
    <%= form.label :end_hour %>
    <%= form.time_select :end_hour %>
  </div>

  <div class="field">
    <%= form.label :day_of_week_id %>
    <%= collection_select(:schedule, :day_of_week_id, DayOfWeek.all, :id, :name, prompt: true) %>
