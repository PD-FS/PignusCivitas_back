<p id="notice"><%= notice %></p>

<h1>Alert Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alert_statuses.each do |alert_status| %>
      <tr>
        <td><%= alert_status.name %></td>
        <td><%= alert_status.description %></td>
        <td><%= link_to 'Show', alert_status %></td>
        <td><%= link_to 'Edit', edit_alert_status_path(alert_status) %></td>
        <td><%= link_to 'Destroy', alert_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert Status', new_alert_status_path %>
