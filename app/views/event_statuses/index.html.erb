<p id="notice"><%= notice %></p>

<h1>Event Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_statuses.each do |event_status| %>
      <tr>
        <td><%= event_status.name %></td>
        <td><%= event_status.description %></td>
        <td><%= link_to 'Show', event_status %></td>
        <td><%= link_to 'Edit', edit_event_status_path(event_status) %></td>
        <td><%= link_to 'Destroy', event_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Status', new_event_status_path %>
